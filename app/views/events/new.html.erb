
<h1 class='text-center'>New Event</h1>

<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @event, local: true) do |f| %>
      <%= render 'events/errors' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'mb-1 form-control' %>

      <%= f.label :event_date %>
      <%= f.datetime_select :event_date, ampm: true, order: %i[day month year], default: 0.days.from_now.localtime, class: 'mb-1 form-control' %>

      <%= f.submit "Create Event", class: "mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>