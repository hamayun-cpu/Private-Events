<h1 class='text-center'>Log in</h1>

<div class="row">
  <div class="col-md-6 offset-3">
  
    <%= form_with(url: login_path, scope: :session, local: true, class: "login-form") do |f| %>

      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, id:'Name', class: 'Name form-control' %>

      <%= f.submit "Login", class: " mt-2 btn btn-primary" %>
    <% end %>

  </div>
</div>